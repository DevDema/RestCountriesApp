<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.andreadematteis.assignments.restcountriesapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
            android:allowBackup="true"
            android:name=".RestCountriesApplication"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.RestCountriesApplication" >
        <activity
                android:name=".view.loading.LoadingActivity"
                android:theme="@style/Theme.RestCountriesApplication.NoActionBar"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".view.country.CountriesActivity"
                android:theme="@style/Theme.RestCountriesApplication.NoActionBar"/>
    </application>

</manifest>